<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1960AD"
    android:padding="16dp">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Status"
        android:layout_marginBottom="10dp"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/mediaControlButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusText"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/backToChatsButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Back"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:background="@drawable/modern_button"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/btnDeleteMedia"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Delete Cache"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/modern_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnCancelDownload"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Stop Download"
            android:visibility="gone"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/modern_button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnResume"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Play Now"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="invisible"
            android:background="@drawable/modern_button"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <EditText
        android:id="@+id/phoneEdit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusText"
        android:layout_centerHorizontal="true"
        android:hint="Phone Number"
        android:inputType="phone"
        android:visibility="gone" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneEdit"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:background="@drawable/modern_button"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/codeEdit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_centerHorizontal="true"
        android:hint="Authentication Code"
        android:inputType="number"
        android:visibility="gone" />

    <Button
        android:id="@+id/codeButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeEdit"
        android:layout_centerHorizontal="true"
        android:text="Submit Code"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        android:background="@drawable/modern_button"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mediaControlButtons"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:background="@drawable/listview_background"
        android:scrollbars="vertical"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/messagesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mediaControlButtons"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:background="@drawable/listview_background"
        android:scrollbars="vertical"
        android:visibility="gone"/>

</RelativeLayout>
