<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#595050"
    android:padding="16dp">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/phoneEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusText"
        android:hint="Phone Number"
        android:inputType="phone"
        android:visibility="gone" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneEdit"
        android:text="Login"
        android:visibility="gone" />

    <EditText
        android:id="@+id/codeEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:hint="Authentication Code"
        android:inputType="number"
        android:visibility="gone" />

    <Button
        android:id="@+id/codeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeEdit"
        android:text="Submit Code"
        android:visibility="gone" />

    <Button
        android:id="@+id/backToChatsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeButton"
        android:text="Back to Chats"
        android:visibility="gone" />

    <ListView
        android:id="@+id/chatListView"
        android:layout_width="328dp"
        android:layout_height="651dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="101dp" />

    <ListView
        android:id="@+id/messagesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backToChatsButton"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnDeleteMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/backToChatsButton"
        android:text="Delete Telegram Media"
        android:visibility="gone" />


    <Button
        android:id="@+id/btnCancelDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDeleteMedia"
        android:layout_marginTop="138dp"
        android:text="Cancel Download" />

    <Button
        android:id="@+id/btnResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCancelDownload"
        android:layout_marginTop="138dp"
        android:text="Play Now"
        android:visibility="invisible"/>
</RelativeLayout>
